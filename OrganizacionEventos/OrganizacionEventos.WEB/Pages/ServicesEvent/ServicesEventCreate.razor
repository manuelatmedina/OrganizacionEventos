@page "/ServicesEvents/create"
@using OrganizacionEventos.Shared.Entities;
@inject NavigationManager navigationManager
@inject IRepository repository
@inject SweetAlertService swal

<h3>Crear Evento</h3>

<ServicesEventForm @ref="ServicesEventForm" ServicesEvent="ServicesEvent" OnSubmit="Create" ReturnAction="Return" />

@code {
    private ServicesEvent ServicesEvent = new();
    private ServicesEventForm? ServicesEventForm;

    private async Task Create()
    {
        var httpResponse = await repository.Post("api/servicesEvents", ServicesEvent);

        if (httpResponse.Error)
        {
            var mensajeError = await httpResponse.GetErrorMessageAsync();
            await swal.FireAsync("Error", mensajeError, SweetAlertIcon.Error);
        }
        else
        {
            ServicesEventForm!.FormPostedSuccessfully = true;
            navigationManager.NavigateTo("ServicesEvents");
        }
    }

    private void Return()
    {
        navigationManager.NavigateTo("ServicesEvents");
    }
}
